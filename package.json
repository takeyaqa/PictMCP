    "test-case-generation",
    "combinatorial-testing",
    "pairwise",
    "pairwise-testing"
  ],
  "homepage": "https://github.com/takeyaqa/PictMCP#readme",
  "bugs": {
    "url": "https://github.com/takeyaqa/PictMCP/issues"
  },
