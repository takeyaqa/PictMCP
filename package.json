{
  "name": "pictmcp",
  "mcpName": "io.github.takeyaqa/PictMCP",
  "version": "0.5.0",
  "description": "MCP (Model Context Protocol) server that provides pairwise combinatorial testing capabilities to AI assistants.",
  "keywords": [
