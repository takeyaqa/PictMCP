  "author": "Takeshi Kishi",
  "files": [
    "dist"
  ],
  "type": "module",
  "bin": {
    "pictmcp": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/takeyaqa/PictMCP.git"
  },
  "scripts": {
