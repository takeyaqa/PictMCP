    "@tsconfig/node-ts": "^23.6.3",
    "@tsconfig/node22": "^22.0.5",
    "@types/node": "^25.2.2",
    "@vitest/eslint-plugin": "^1.6.6",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": "^22 || ^24"
  },
